<%- include ../partials/header %>

<div class="container">
    <header>

        <div class="jumbotron">
            <div class="container">
                <h1>Welcome to DogBook!</h1>
                <p>View dogs from all over the world</p>
                <p>
                    <a class="btn btn-primary btn-lg" href="/dogs/new">Add a new dog!</a>
                </p>
            </div>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% dogs.forEach(function(dog) { %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%=dog.image%>">
                <div class="caption">
                    <p> <%= dog.name %></p>
                </div>
                <p><a href="/dogs/<%=dog._id%>" class="btn btn-primary">More info</a></p>
            </div>
        </div>
        <% }); %>

    </div>
</div>

<%- include ../partials/footer %>