<%- include ../partials/header %>

<div class="container">

    <h1 style="text-align: center">Edit <%= dog.name %> here!!</h1>
    <div style="width: 30%; margin: 25px auto;">
        
        <form action="/dogs/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">    
                <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-default btn-block">submit!</button>
            </div>
        </form>
        <a href="/dogs/<%= dog._id %>">Go back!</a>
        
    </div>

</div>
    
<%- include ../partials/footer %>