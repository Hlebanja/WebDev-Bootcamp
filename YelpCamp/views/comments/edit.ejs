<%- include ../partials/header %>

<div class="container">

    <h1 style="text-align: center">Edit Comment</h1>
    <div style="width: 30%; margin: 25px auto;">

        
        
        <form action="/dogs/<%= dogID %>/comments/<%= comment._id %>?_method=put" method="POST">
            <div class="form-group">    
                <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-default btn-block">submit!</button>
            </div>
        </form>
        <a href="/dogs">Go back!</a>
        
    </div>

</div>
    
